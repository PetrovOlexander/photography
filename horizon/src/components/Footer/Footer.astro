---
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import siteData from "@config/siteData.json";
import { Icon } from "astro-icon/components";

import FooterLink from "./FooterLink.astro";

const today = new Date();
---

<footer class="bg-base-100/40 mt-12 flex items-center justify-center py-8">
	<div class="site-container">
		<!-- footer links -->
		<div class="mx-auto max-w-[21rem] px-4 text-center">
			<div class="flex justify-center text-center">
				<SiteLogo />
			</div>
		</div>

		<!-- lets connect -->
		<div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
			<p>
				<span class="italic">Lets connect!</span> Follow my accounts to view more photography and get
				inspired!
			</p>
		</div>

		<!-- socials -->
		<div class="text-primary-500 mt-8 flex justify-center gap-4">
			<a href="https://www.facebook.com/petrovisual.s/" target="_blank" rel="noopener noreferrer">
				<Icon name="socials/mdi-facebook" class="size-6 transition hover:opacity-80" />
				<span class="sr-only">Facebook</span>
			</a>
			<a href="https://www.instagram.com/petrovisual.s/" target="_blank" rel="noopener noreferrer">
				<Icon name="socials/basil-instagram-solid" class="size-6 transition hover:opacity-80" />
				<span class="sr-only">Instagram</span>
			</a>
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			&copy; {today.getFullYear()}
			{siteData.name}. All rights reserved.
		</div>
	</div>
</footer>
